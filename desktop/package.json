{
  "name": "DragonDrop",
  "version": "3.0.0-rc1",
  "author": {
    "name": "DigiPen Institute of Technology",
    "email": "digiblocks@digipen.edu",
    "url": "https://dragondropteam.github.io"
  },
  "description": "Blockly based visual programming IDE",
  "homepage": "https://dragondropteam.github.io",
  "main": "main.js",
  "build": {
    "publish": [
      "github"
    ],
    "directories": {
      "output": "../dist"
    },
    "appId": "edu.digipen.dragondrop",
    "productName": "Dragon Drop",
    "copyright": "Dragon Drop Copyright DigiPen 2016, Blockly Copyright Google, Ace Editor Copyright Cloud9, Golden Layout copyright deepstreamIO",
    "fileAssociations": [
      {
        "ext": "digiblocks",
        "name": "Dragon Drop"
      },
      {
        "ext": "drop",
        "name": "Dragon Drop"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "license": "./build/license_en.txt"
    }
  },
  "scripts": {
    "start": "electron main.js",
    "start-dev": "electron main_dev.js",
    "test": "electron-mocha",
    "rebuild": "electron-rebuild .",
    "build": "ALLOW_ELECTRON_BUILDER_AS_PRODUCTION_DEPENDENCY=true gulp",
    "spaghetti": "serve ../",
    "postinstall": "electron-builder install-app-deps && yarn rebuild"
  },
  "devDependencies": {
    "del": "latest",
    "devtron": "^1.4.0",
    "electron": "^1.8.6",
    "electron-builder": "20.14.7",
    "electron-mocha": "^6.0.2",
    "electron-publisher-s3": "^20.13.1",
    "electron-rebuild": "^1.6.0",
    "gulp": "^3.9.1",
    "gulp-add-src": "^1.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-uglify": "^3.0.0",
    "gulp-yarn": "^1.0.1",
    "pump": "^3.0.0",
    "serve": "^6.5.5",
    "standard": "^11.0.1",
    "uglify-es": "^3.2.2",
    "username": "*"
  },
  "dependencies": {
    "angular": "1.7.0",
    "angular-animate": "1.7.0",
    "angular-aria": "1.7.0",
    "angular-material": "^1.1.5",
    "electron-log": "^2.2.11",
    "electron-store": "2.0.0",
    "electron-updater": "^2.21.10",
    "fs-extra": "^4.0.3",
    "golden-layout": "^1.5.8",
    "gulp-install": "^1.1.0",
    "jszip": "^3.1.5",
    "natives": "1.1.6",
    "promisepipe": "^2.1.1",
    "rxjs": "^5.5.7",
    "semver": "^5.5.0",
    "serialport": "^6.0.4",
    "username": "^3.0.0",
    "yargs": "^11.0.0",
    "zip-dir": "^1.0.2"
  },
  "license": "MIT",
  "repository": "https://github.com/dragondropteam/desktop",
  "private": true
}
